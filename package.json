{
  "name": "hearken",
  "version": "0.0.1",
  "description": "A tiny and beautiful audio library",
  "main": "index.js",
  "module": "dist/hearken.esm.js",
  "scripts": {
    "dev": "node ./scripts/develop.js",
    "build": "node ./scripts/build.js",
    "server": "node ./static/server.js",
    "lint": "eslint --ext .ts src/**",
    "ls-lint": "ls-lint",
    "format": "prettier --write --parser typescript \"src/*.ts?(x)\"",
    "test": "jest",
    "test:cover": "jest --coverage",
    "report": "./node_modules/.bin/codecov -f ./coverage/coverage-final.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node scripts/verifyCommit.js"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "author": "Imtaotao, JiangLiruii",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-typescript": "^7.10.1",
    "@koa/cors": "^3.1.0",
    "@ls-lint/ls-lint": "^1.8.1",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/parser": "^3.2.0",
    "babel-jest": "^26.1.0",
    "chalk": "^4.1.0",
    "codecov": "^3.7.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "koa": "^2.13.0",
    "koa-range": "^0.3.0",
    "koa-static": "^5.0.0",
    "lint-staged": "^10.2.11",
    "opn": "^6.0.0",
    "prettier": "~1.14.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.18.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "typescript": "^3.9.5"
  }
}
