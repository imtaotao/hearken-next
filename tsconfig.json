{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "tsDist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "plugins": [{ "name": "tslint-language-service" }],
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true
  },
  "include": [
    "src",
  ]
}
