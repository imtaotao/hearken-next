{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "tsDist",
    "sourceMap": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "declaration": true,
    "plugins": [{ "name": "tslint-language-service" }]
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true
  },
  "include": ["src"],
  "exclude": ["src/__tests__/*"]
}
